<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".AddCapsuleActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="389dp"
        android:layout_height="669dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/createcapsuleframe" />

    <EditText
        android:id="@+id/capsuleTitle"
        android:layout_width="244dp"
        android:layout_height="45dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/rounded_frame"
        android:ems="10"
        android:fontFamily="@font/gelasio_medium"
        android:inputType="text"
        android:text="   "
        android:textColor="#4b231c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <EditText
        android:id="@+id/capsuleDescription"
        android:layout_width="244dp"
        android:layout_height="89dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/rounded_frame"
        android:ems="10"
        android:fontFamily="@font/gelasio_medium"
        android:inputType="text"
        android:text="   "
        android:textColor="#4b231c"
        app:layout_constraintBottom_toTopOf="@+id/addCapsuleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capsuleTitle"
        app:layout_constraintVertical_bias="0.596" />

    <EditText
        android:id="@+id/addUsers"
        android:layout_width="244dp"
        android:layout_height="43dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rounded_frame"
        android:ems="10"
        android:fontFamily="@font/gelasio_medium"
        android:inputType="text"
        android:textColor="#4b231c"
        app:layout_constraintBottom_toTopOf="@+id/chooseTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton

        android:id="@+id/addCapsuleButton"
        android:layout_width="244dp"
        android:layout_height="43dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/rounded_frame"
        android:contentDescription="Click Me"
        android:scaleType="fitCenter"
        android:src="@drawable/addbutton"
        app:layout_constraintBottom_toTopOf="@+id/addUsers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capsuleTitle"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="264dp"
        android:layout_height="43dp"
        android:fontFamily="@font/gelasio_medium"
        android:text=" memory creation"
        android:textColor="#4b231c"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="43dp"
        android:layout_height="37dp"
        android:backgroundTint="@color/bgColor"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/backbutton" />

    <ImageButton
        android:id="@+id/creatButton"
        android:layout_width="111dp"
        android:layout_height="67dp"
        android:backgroundTint="@color/bgColor"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953"
        app:srcCompat="@drawable/creatbutton" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/gelasio_medium"
        android:text="Create"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#4b231c"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/gelasio_medium"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#4b231c"
        app:layout_constraintBottom_toTopOf="@+id/capsuleTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/gelasio_medium"
        android:text="Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#4b231c"
        app:layout_constraintBottom_toTopOf="@+id/capsuleDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capsuleTitle" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gelasio_medium"
        android:text="Upload File(s)"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#4b231c"
        app:layout_constraintBottom_toTopOf="@+id/addCapsuleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capsuleDescription" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gelasio_medium"
        android:text="Share with (emails)"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#4b231c"
        app:layout_constraintBottom_toTopOf="@+id/addUsers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCapsuleButton" />

    <EditText
        android:id="@+id/chooseTime"
        android:layout_width="244dp"
        android:layout_height="43dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/rounded_frame"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/gelasio_medium"
        android:inputType="text"
        android:text="    "
        android:textColor="#4b231c"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gelasio_medium"
        android:text="Choose Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#4b231c"
        app:layout_constraintBottom_toTopOf="@+id/chooseTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addUsers" />


</androidx.constraintlayout.widget.ConstraintLayout>